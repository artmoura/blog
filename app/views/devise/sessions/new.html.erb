<div class="container login-container center-align" style=" display: flex; align-items: center; justify-content: center;">
  <div class="card">
    <div class="card-content">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="row">
          <div class="input-field col s12">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "validate", id: "email" %>
            <%= f.label :email, for: "email" %><br />
          </div>

          <div class="input-field col s12">
            <%= f.password_field :password, autocomplete: "current-password", class: "validate" %>
            <%= f.label :password %><br />
          </div>

          <div class="actions">
            <%= f.submit "Log in", class: "btn-small waves-light waves-effect btn-login" %>
          </div>
        </div>
      <% end %>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>